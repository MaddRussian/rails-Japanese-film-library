<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('../images/tech-daily-PGuCnUzsRSM-unsplash (1).jpg');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <div class="cards">
        <% @list.bookmarks.each do |bookmark| %>
          <%= render 'bookmarks/card', bookmark: bookmark %>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      <%= render 'bookmarks/form' %>
    </div>
  </div>
  <%= link_to root_path, class: "btn btn-warning mt-3" do %>
    <i class="fa-solid fa-house"></i>
  <% end %>
</div>
<%= @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title%>
  <%= bookmark.comment%>
<% end%>
<%= @list.name %>
<%= link_to "Back to lists", lists_path%>
